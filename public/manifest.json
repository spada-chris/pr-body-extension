{
  "name": "Github PR Enhancer",
  "version": "0.0.2",
  "description": "Add the PR body to Github files view",
  "manifest_version": 3,
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
      "resources": [ "icon.png" ],
      "matches": [ "https://github.com/*" ]
    }
  ],
  "content_scripts": [
      {
        "matches": ["https://github.com/*"],
        "js": ["content.js"],
        "css": ["content.css"],
        "run_at": "document_end"
      }
  ],
  "permissions": [
    "tabs"
  ]
}
